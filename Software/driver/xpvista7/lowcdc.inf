[Version] 
Signature	= "$Windows NT$"
Provider	= %COMPANY%
DriverVer	= 08/24/2009,1.0.1.3

Class		= Ports
ClassGuid	= {4D36E978-E325-11CE-BFC1-08002BE10318}

[Manufacturer] 
%MFGNAME%	= Devices,NT

;--------------------------------------------------------------------------
; Files
;--------------------------------------------------------------------------

[DestinationDirs]
DefaultDestDir	= 12

;--------------------------------------------------------------------------
; Device driver
;--------------------------------------------------------------------------

[DriverInstall.NT]
Include	= mdmcpq.inf
CopyFiles	= DriverInstall.NT.CopyFiles
AddReg		= DriverInstall.NT.AddReg

[DriverInstall.NT.CopyFiles]
usbser.sys
lowcdc.sys

[DriverInstall.NT.Services]
AddService	= usbser, 0x00000002, DriverServiceInst
AddService	= lowcdc, 0x00000000, DriverLower.AddService

[DriverInstall.NT.AddReg]
HKR,,DevLoader,,*ntkern
HKR,,NTMPDriver,,usbser.sys
HKR,,EnumPropPages32,,"MsPorts.dll,SerialPortPropPageProvider"

[DriverInstall.NT.HW]
AddReg=DriverLower.HW

[DriverLower.HW]
HKR,,LowerFilters, 0x00010000, "lowcdc"

;--------------------------------------------------------------------------
; Services
;--------------------------------------------------------------------------

[DriverServiceInst]
DisplayName	= %SERVICE%
ServiceType	= 1
StartType	= 3
ErrorControl	= 1
ServiceBinary	= %12%\usbser.sys
LoadOrderGroup	= PNP Filter

[DriverLower.AddService]
DisplayName	= %SERVICE2%
ServiceType	= 1
StartType	= 3
ErrorControl	= 1
ServiceBinary	= %12%\lowcdc.sys 

;--------------------------------------------------------------------------
; Devices
;--------------------------------------------------------------------------

[Devices.NT]
%DESCRIPTION%	= DriverInstall,USB\VID_16C0&PID_05E1

;--------------------------------------------------------------------------
; Strings
;--------------------------------------------------------------------------

[Strings] 
COMPANY	= "www.ullihome.de"
MFGNAME	= "www.ullihome.de"
DESCRIPTION	= "Virtual Communications Port"
SERVICE	= "USB RS-232 Emulation Driver"
SERVICE2	= "Low-Speed CDC Transfer Interface"
